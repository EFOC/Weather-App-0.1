<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/item_city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/item_max_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/item_city_name"
        android:layout_toEndOf="@+id/item_city_name"/>

    <TextView
        android:id="@+id/item_min_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Min"
        android:layout_margin="10dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/item_city_name"/>

    <TextView
        android:id="@+id/item_feels_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feels"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/item_min_temp"
        android:layout_toEndOf="@+id/item_min_temp"/>

</RelativeLayout>